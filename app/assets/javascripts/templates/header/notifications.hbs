<li {{bind-attr class=":notifications :searchbar showSearchbar:isactive:isinactive"}}>
  {{#if showSearchbar}}
    {{input class="search-field" action="submitSearch" value=searchTerm placeholder="Search for..."}}
  {{/if}}
  <a {{action 'toggleSearchbar'}} class="search-link">
    <i class='fa fa-search' style="position: relative; bottom: initial;"></i>
  </a>
  {{#if hasInstantSearchResults}}
  <ul class="search-dropdown">
    {{#each result in instantSearchResults}}
      <li class="search-result">
        <a {{bind-attr href="result.link" title="result.title"}}>
          <div class="search-result-thumb">
            <img {{bind-attr src="result.image"}} />
          </div>
          <div class="search-result-title">{{result.title}}</div>
          <span {{bind-attr class=":search-result-badge :badge result.type"}}>{{result.type}}</span>
          <div class="search-result-break"></div>
        </a>
      </li>
    {{/each}}
    {{!--
    <li class="search-result search-result-more">
      {{#link-to 'search' searchTerm}}View more (enter){{/link-to}}
    </li>
    --}}
  </ul>
  {{/if}}
</li>
<li class='dropdown notifications'>
  <a class='dropdown-toggle notification-link' data-toggle='dropdown' href='#'>
    <i {{bind-attr class=':fa :fa-bell :active hasUnreadNotifications:hasNew:hasNoNew'}}>
      {{#if hasUnreadNotifications}}
        {{strpad unreadNotifications}}
      {{/if}}
    </i>
  </a>
  <ul class='dropdown-menu notification-dropdown right-nav-section'>
    {{#each limitedNotifications}}
      <li {{bind-attr class=":notification-element seen:nonew:new"}}>
        {{#link-to 'user.index' controller.currentUser classNames="clearfix"}}
          <div class='col-xs-1 col-sm-1 col-md-1 user-avatar'>
            <img {{bind-attr src="source_avatar"}}>
          </div>
          <div class='col-xs-11 col-sm-11 col-md-11 user-info'>
            <h5 class='username'>
              {{source_user}}
              <small class='user-action'>
                wrote a comment on your profile.
              </small>
            </h5>
            <small>{{time-ago time=created_at}}</small>
          </div>
        {{/link-to}}
      </li>
    {{else}}
      <li>
        <span>You don't have any notifications yet.</span>
      </li>
    {{/each}}
    <li>
      {{#link-to 'notifications'}}View All Notifications{{/link-to}}
    </li>
  </ul>
</li>
