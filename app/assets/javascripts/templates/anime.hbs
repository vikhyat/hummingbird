{{!-- Background Image (Add .bg-image-wrapper IF a BG image is present) --}}
<div class="bg-image-wrapper series" style="background:url('http://cl.ly/image/2d3v1H0f2g19/grayscale.jpg'); background-position: 0 -250px;"></div>
<div class="wrapper-fade"></div>

{{!-- Library Container --}}
<div class="container bg-image">
  {{!-- Library Table Row --}}
  <div class="row">
    <div class="top-buttons">
      <ul class="left-buttons">
        <li>
          <button type="button" {{bind-attr class=":btn :btn-default :top-button :heard isFavorite:active"}} {{action toggleFavorite}}>
            <i {{bind-attr class="isFavorite:icon-heart:icon-heart-empty"}}></i>
          </button>
        </li>
        <li>
        <div class="btn-group">
          <button class="btn btn-default dropdown-toggle top-button" type="button" data-toggle="dropdown">
            add to library
          </button>
          <ul class="dropdown-menu">
            <li><a href="#">Currently Watching</a></li>
            <li><a href="#">Plan to Watch</a></li>
            <li><a href="#">Completed</a></li>
            <li><a href="#">On Hold</a></li>
            <li><a href="#">Dropped</a></li>
          </ul>
        </div>
        </li>
      </ul>
      <ul class="right-buttons">
        <li>
        {{!-- <button type="button" class="btn btn-default top-button">Follow Series</button> --}}
        </li>
      </ul>
    </div>
    <div class="gallery hidden-xs">
      {{#if youtubeVideoId}}
        <div class="trailer hidden-sm">
          <a target="_blank" {{bind-attr href=trailerLink}}>
            <div class="play-icon"><i class="icon-play icon-4x"></i></div>
            <img width="100%" height="auto" {{bind-attr src=trailerPreviewImage}}>
          </a>
        </div>
      {{/if}}

      <ul class="gallery-images">
        {{#each imageURL in screencaps}}
          <li class="gallery-image"><img {{bind-attr src=imageURL}}></li>
        {{/each}}
      </ul>
    </div>
    <div class="series-body">
      <div class="panel panel-default series-panel">
        <div class="series-sidebar">
          <div class="series-title-wrapper hidden-sm hidden-md hidden-lg">
            <h4 class="series-title">{{canonicalTitle}}</h4>
          </div>

          <div class="poster-container">
            <img class="series-poster" {{bind-attr src=posterImage}}>
          </div>

          <div class="series-infobar hidden-sm hidden-md hidden-lg">{{partial "anime/infobar"}}</div>
          <div class="sidebar-copy">
            <div class="series-description hidden-sm hidden-md hidden-lg">
              <p>{{truncate-text text=synopsis length=500}}</p>
              <div class="social-links clearfix">
