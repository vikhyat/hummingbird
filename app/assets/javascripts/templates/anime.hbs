          <div class="community-rating">
            <h5 class="sidebar-title text-center">Community Rating</h5>
            {{community-rating communityRatings}}
          </div>
          <div id="affiliate" class="buy-series">
            <h5 class="sidebar-title">Where to Buy</h5>
            <div class="affiliate-button">
              <a href="#"><img src="http://hummingbird.me/assets/jlist-936b9137d45e73fb901ef36592fb840e.png"></a>
