.profile-leaderboard
  .ad
    ad-unit adId="1293413" adClass="257f81e798bd68dd81e60f42838f361f"

.container
  .user-listing
    .panel.panel-default
      .panel-heading
        h3.panel-title #{user.username}'s Followers
      each
        .user
          a href=userLink
            .user-avatar
              avatar this 'thumb_small'
            .user-content
              h4 #{username}
              p #{miniBio}
          .follow-button-column
            a.btn.follow-button{action toggleFollow this}
              if isFollowed
                | Unfollow
              else
                | Follow

      if canLoadMore
        load-more action="loadNextPage"
