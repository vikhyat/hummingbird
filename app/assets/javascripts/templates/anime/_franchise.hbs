{{#if franchise.isLoaded}}
  {{#each franchise}}
    <div class="rounded-block franchise-show">
      <div class="col-sm-2 no-padding hidden-xs">
        <img class="series-poster" {{bind-attr src=posterImage}}>
      </div>
      <div class="col-xs-12 col-sm-10">
        <h4 class="series-title">{{#link-to 'anime' id}}{{canonicalTitle}}{{/link-to}}</h4>
        {{partial "anime/infobar"}}
        <p>{{truncate-text text=synopsis length=300}}</p>
      </div>
    </div>
  {{/each}}
{{else}}
  {{loading-indicator}}
{{/if}}
