.six.columns
  .panel.review-block
    .twelve.columns
      .three.columns.review-thumbnail
        = link_to image_tag(review.anime.cover_image.url(:thumb)), anime_review_path(review.anime, review)
        / .vote-blocks.twelve.columns
        /   - (-2).upto(2) do |i|
        /     = review.rating >= i ? "★" : "☆"
      %h3= link_to truncate(review.anime.canonical_title(current_user), length: 25, omission: '...'), anime_review_path(review.anime, review)
      %p
        = review.summary || truncate(strip_tags(review.content), length: 500, omission: '...')
        %br
        = link_to "Read more", anime_review_path(review.anime, review)


