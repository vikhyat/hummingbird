= render "dash"

= link_to "Currently Watching", user_watchlist_path(@user, list: "currently_watching")
= link_to "Plan To Watch", user_watchlist_path(@user, list: "plan_to_watch")
= link_to "Completed", user_watchlist_path(@user, list: "completed")
= link_to "On Hold", user_watchlist_path(@user, list: "on_hold")
= link_to "Dropped", user_watchlist_path(@user, list: "dropped")

.home.user-watchlist
  .row
    .recent.six.columns
      %hr
      .panel.cards.cf
        %figure
          .overlay
            .poster.four.columns
              %img{:src => "http://localhost:3000/system/anime/cover_images/000/000/055/thumb/75.jpg?1360397880"}

            .title-info.eight.columns
              %h4 Fafner of the Blue Sky
              %p.seen-count Seen <span>18</span> of <span>26</span> episodes
              .vote-blocks
                %span.like
                  %strong.active= link_to "[:)]", "#"
                %span.dislike
                  %strong= link_to ":(", "#"

          %img.background{:src => "http://localhost:3000/system/anime/cover_images/000/000/055/thumb/75.jpg?1360397880"}
        .progress.six
