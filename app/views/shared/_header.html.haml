.hummingbird-header
  .top-bar
    .row
      .twelve.columns
        / Navigation
        .row
          .twelve.columns
            %ul.top-bar
              %ul
                %li.name
                  %h1
                    %a{:href => "#"} Hummingbird
                %li.toggle-topbar
                  %a{:href => "#"}
              %section
                %ul.left
                  %li
                    %a{:href => "#"} Discover
                  %li
                    %a{:href => "#"} Dashboard
                  %li
                    %a{:href => "#"} Community

                %ul.right
                  - if user_signed_in?
                    %li.has-dropdown
                      %span.avatar= link_to image_tag('http://cl.ly/image/3o232A1n2223/avatar.jpg')
                      %ul.dropdown
                        %li
                          = link_to "Edit profile", edit_user_registration_path
                        %li
                          = link_to "Sign out", destroy_user_session_path, :method => :delete
                  - else
                    %li= link_to "Login", new_user_session_path
                    %li
                      %a{"data-reveal-id" => "register", :href => "#"} Register

                  #register.reveal-modal{:class => "medium"}
                    %h2 Sign up

                    = render "devise/registrations/form"
