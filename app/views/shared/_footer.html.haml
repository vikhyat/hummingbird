.hummingbird-footer
  - if session[:recently_viewed] and session[:recently_viewed].length > 0
    .history-bar.hide-for-small
      %footer.row
        .twelve.columns
          .recently-viewed
            %h1 Recently Viewed
            %ul
              - animes = Anime.where('slug IN (?)', session[:recently_viewed])
              - animes.each do |anime|
                %li.two.columns.has-tip.tip-top{"data-width" => "210", :title => anime.title}= link_to image_tag(anime.cover_image.url(:thumb)), main_app.anime_path(anime)

  .bottom-bar
    %footer.row
      .twelve.columns
        .row.footer
          .three.columns
            %span.footer-logo Hummingbird
          .nine.columns
            %ul.link-list.right
              %li
                %a{:href => "#"} Discover
              %li
                = link_to "Dashboard", "/dashboard"
              %li
                = link_to "Community", main_app.forem_path
            %ul.link-list.right.bottom-list
              %li
                %a{:href => "#"} About Hummingbird
              %li
                %a{:href => "#"} Press
              %li
                %a{:href => "#"} Terms of Service
              %li
                %a{:href => "#"} Privacy Policy
              %li
                %a{:href => "#"} Contact Us
