.notifications
  .row
    .small-12.large-6.large-centered.columns.rounded-panel
      %h1= title (pluralize @unseen_notification_count, 'New Notification')
      %ul
        - if @notifications.length == 0
          %li.nothing-here
        - else
          - @notifications.each do |notification|
            %li{class: ('unread' unless notification.seen?)}
              - if notification.notification_type == "profile_comment"
                .img= avatar_link notification.source.target
                = user_link notification.source.target
                wrote a
                comment
                on your profile.
              %span.time
                = distance_of_time_in_words_to_now notification.created_at
                ago
