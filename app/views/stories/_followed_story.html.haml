- user = story.user
%li.feed-item.cf{:class => "story-#{story.id}"}
  .large-12.columns.feed-wrapper
    .small-3.large-2.columns.no-padding-right
      = avatar_link user
    .small-9.large-10.columns
      %h4.anime-feed-title
        = link_to (user == current_user) ? "You" : user.name, user
        started following
        = pluralize story.substories.count, "person"
      = render story.substories.order('created_at DESC').limit(2)
        
    - if story.substories.length > 2
      .large-12.columns.center
        %a.show-more{:onclick => "alert('Coming soon!')"} 
          <i class="icon-angle-down"></i> 
          Show More
