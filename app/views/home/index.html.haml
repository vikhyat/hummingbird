      .large-12.columns.no-padding.recent-watched
        .recommendations
          - @recent_anime.each do |watchlist|
            .large-3.columns.no-padding.recommendation
              = image_tag watchlist.anime.cover_image.url(:thumb)
              .large-12.columns.meta-wrapper
