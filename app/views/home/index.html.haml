                  %p 
                    %h5.anime-title= anime_link watchlist.anime
                  .rating{:id => watchlist.anime.slug, :"data-rating" => (watchlist.rating || -3) + 3}
                  :javascript
                    initializeRatingInterface($(".rating##{watchlist.anime.slug}"), "#{watchlist.anime.slug}", "starRatings");
                  %hr
                  .large-6.columns.no-padding
                    Progress:
                  .large-6.columns.no-padding.progress-number
                    %a.count-add{:href => "#"}
                      %i.icon-angle-up
                      18 <span class="total-episodes">/ 51</span>
