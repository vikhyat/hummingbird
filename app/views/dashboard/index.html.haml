.dashboard
  .row.content-body
    .twelve.columns
      .panel.profile-bar
        .user-block
          %figure.user-avatar= image_tag(current_user.avatar_url)
          %figcaption.karma 10,042
          %figcaption.karma-title karma
        .user-information 
          %h4.username= current_user.name
          %p.bio 
            - if not current_user.bio.nil?
              = current_user.bio
            - else
              (Edit profile link goes here)
        .genre-graph
          .title Most Watched Genres
          .chart.first
            .percentage{"data-percent" => "55"}
              %span 55
            .label= link_to "Action", "#"
          .chart.second
            .percentage{"data-percent" => "46"}
              %span 46
            .label= link_to "Slice of Life", "#"
          .chart.third
            .percentage{"data-percent" => "92"}
              %span 92
            .label= link_to "Horror", "#"


      .profile-bar-subnav

:javascript
  $(function() {
      $('.percentage').easyPieChart({
          animate: 1000,
          barColor: '#f3a43d',
          size: 83,
      });
  });


