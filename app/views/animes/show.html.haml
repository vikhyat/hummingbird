- title @anime.title

%h1= @anime.title

%img{:src => @anime.cover_image_url}

%p Age rating: #{@anime.age_rating}
%p Episode count: #{@anime.episode_count}
%p Episode length: #{@anime.episode_length}
%p Status: #{@anime.status}
%p Synopsis: #{@anime.synopsis}
%p 
  Genres: 
  - @anime.genres.each do |genre|
    = link_to genre.name, genre
%p 
  Producers: 
  - @anime.producers.each do |producer|
    = link_to producer.name, producer

%h3 Quotes

- @anime.quotes.limit(4).each do |quote|
  %blockquote
    = quote.content
    â€”
    = quote.character.name

%p= link_to "[Show all]", anime_quotes_url(@anime)

%h3 Youtube Video

%iframe{:width => 560, :height => 315, :frameborder => 0, :allowfullscreen => true, :src => "http://www.youtube.com/embed/#{@anime.youtube_video_id}"}

%h3 Casting

- @anime.castings.each do |casting|
  %p
    = casting.character.name
    \....
    - if casting.voice_actor
      = casting.voice_actor.name
    - else
      (unknown)
