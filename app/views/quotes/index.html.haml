            = image_tag "http://hummingbird.me/system/users/avatars/000/001/537/thumb_small/gold_saw_avatar.jpg?1370299350"
          .large-4.columns.face-grid-user
            = image_tag "http://hummingbird.me/system/users/avatars/000/001/955/thumb_small/avatar_ponkan.png?1370832190"
          .large-4.columns.face-grid-user
            = image_tag "http://hummingbird.me/system/users/avatars/000/005/404/thumb_small/312220_519542794776587_1110699229_n.jpg?1372050439"
          .large-4.columns.face-grid-user
            = image_tag "http://hummingbird.me/system/users/avatars/000/005/097/thumb/Papermanhb8.gif?1372027593"
          .large-4.columns.face-grid-user
            = image_tag "http://hummingbird.me/system/users/avatars/000/000/002/thumb/534622_473195162710276_654386858_n_(1).jpg?1370705025"
