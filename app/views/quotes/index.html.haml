            = image_tag "http://hummingbird.me/system/users/avatars/000/005/655/thumb/Baku.(Nico.Nico.Singer).full.1005805.jpg?1372028446"


    .large-7.columns.center-column
      .panel
        %h4= title "#{@anime.canonical_title(current_user)} Quotes"
        %a{"data-reveal-id" => "submit-quote", :href => "#"}
          %span= "Submit a quote for #{@anime.canonical_title(current_user)}"
          
      - @quotes.each do |quote|
        .large-12.columns.panel.no-padding.rounded-panel
          .large-12.columns.panel-head
            %p.head-title
              - if quote.creator
                Submitted by #{link_to quote.creator.name, quote.creator}
                |
              = link_to "report", "#"
            %p.head-action
              = render partial: "quotes/votes", locals: {quote: quote}
          %hr.block-divider
          .large-12.columns
            %p.quote-content
              = quote.content
              - if quote.character_name
                %cite -- #{quote.character_name}

    .large-3.columns
      %h5 SCREENCAPS
      = image_tag "http://hummingbird.me/system/gallery_images/images/000/000/013/thumb/fmab4.jpg?1361481581"
      = image_tag "http://hummingbird.me/system/gallery_images/images/000/000/010/thumb/fmab1.jpg?1361481525"
      = image_tag "http://hummingbird.me/system/gallery_images/images/000/000/011/thumb/fmab2.jpg?1361481544"
      = image_tag "http://hummingbird.me/system/gallery_images/images/000/000/012/thumb/fmab3.jpg?1361481562"



#submit-quote.reveal-modal{:class => "small"}
  = render 'quotes/new'

