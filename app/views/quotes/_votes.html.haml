%span{:class => "quote_#{quote.id}_votes"}
  - votes = (quote.votes rescue quote.reputation_for(:votes))
  = pluralize votes.to_i, "vote"
  - if current_user && quote.has_evaluation?(:votes, current_user)
    = link_to vote_anime_quote_path(quote.anime, quote, type: "down"), method: :post, remote: true do
      %i.icon-star
  - else
    = link_to vote_anime_quote_path(quote.anime, quote, type: "up"), method: :post, remote: true do
      %i.icon-star-empty

