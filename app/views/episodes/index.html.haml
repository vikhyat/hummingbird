.anime-discover.anime-show.anime-show-full
  .row
    .large-3.columns
      = render partial: 'anime/card', locals: {data: [@anime, @watchlist, 'large-12']}

    .large-9.columns
      .panel.top-bar
        %h4= title "#{@anime.canonical_title(current_user)} Episode List"
      
      .panel.user-watchlist
        .episode-list{:class => "episode-list-#{@anime.slug}"}
          %ul
            - @episodes.each do |episode, watched|
              %li.episode{:class => ("active" if watched)}
                .title.large-10.columns
                  .episode-number= episode.format_season_episode
                  .episode-title= episode.title
                .view-button.large-2.columns
                  - if watched
                    %strong
                      = link_to "", watch_anime_episode_path(@anime, episode, watched: false), method: :post
                  - else
                    %strong
                      = link_to "", watch_anime_episode_path(@anime, episode, watched: true), method: :post
      
      - if @anime.thetvdb_series_id
        .panel
          %p 
            The episode information for #{@anime.canonical_title(current_user)} has been provided by
            #{link_to "TheTVDB.com", "http://www.thetvdb.com/?tab=series&id=#{@anime.thetvdb_series_id}"}.
