$(".episode-list").fadeOut(function () {
  $(".episode-list").replaceWith('<%= j render(partial: "list_four", locals: {anime: @anime, episodes: @episodes}) %>');
  $(".episode-list").fadeIn();
});

$("#card-<%= @anime.slug %>").replaceWith('<%= j render(partial: "anime/card", locals: {anime: @anime, watchlist: @watchlist, last: false}) %>');
