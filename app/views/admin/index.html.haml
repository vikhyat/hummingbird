%h1(style="text-align: center")= title "Admin Panel"

.row
  .three.columns
    %ul.nav-bar.vertical
      %li= link_to "Rails Admin", "/kotodama/rails_admin"
      %li= link_to "Sidekiq Dashboard", "/kotodama/sidekiq"
      %li= link_to "Forem Admin", forem.admin_root_url
  .panel.nine.columns
    %table
      %tr
        %td Number of sign-ups
        %td= @total_beta
    
    %h5 Recent Invite Requests
    %table
      - @recent_beta.each do |bi|
        %tr
          %td= bi.email
          %td= distance_of_time_in_words_to_now(bi.created_at, true)
