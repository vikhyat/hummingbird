    // Right Column
    .large-3.columns
      //trailer
      - if @anime.youtube_video_id
        .large-12.columns.no-padding.side-block
          %h5 TRAILER
          .flex-video
            %iframe(allowfullscreen frameborder=0 height="auto" width="100%"){:src => "http://www.youtube.com/embed/#{@anime.youtube_video_id}"}

      //screns
      - if @anime.gallery_images.count > 0
        .large-12.columns.no-padding.side-block
          %h5 SCREENCAPS
          - @anime.gallery_images.each do |gallery_image|
            = image_tag gallery_image.image.url(:thumb), alt: "#{@anime.canonical_title} Screencap"

      //quotes
      .large-12.columns.no-padding.side-block
