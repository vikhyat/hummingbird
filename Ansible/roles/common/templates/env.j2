{% if 'webservers' in group_names %}
  export UNICORN_PROCESSES={{unicorn_processes}}
{% endif %}

export RAILS_ENV=production

{% for host in groups['redis'] %}
  export REDIS_HOST={{hostvars[host]['ansible_eth0']['ipv4']['address']}}
{% endfor %}

{% for host in groups['solr'] %}
  export SOLR_HOST={{hostvars[host]['ansible_eth0']['ipv4']['address']}}
{% endfor %}
