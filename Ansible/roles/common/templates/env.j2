{% if 'webservers' in group_names %}
  export UNICORN_PROCESSES={{unicorn_processes}}
{% endif %}

export RAILS_ENV=production

{% for host in groups['redis'] %}
  export REDIS_HOST={{hostvars[host]['ansible_eth0']['ipv4']['address']}}
{% endfor %}

{% for host in groups['dbservers'] %}
  export POSTGRES_HOST={{hostvars[host]['ansible_eth0']['ipv4']['address']}}
{% endfor %}

{% for host in groups['beanstalkd'] %}
  export BEANSTALKD_URL={{hostvars[host]['ansible_eth0']['ipv4']['address']}}:11300
  export BEANSTALK_URL=beanstalk://{{hostvars[host]['ansible_eth0']['ipv4']['address']}}:11300
{% endfor %}
